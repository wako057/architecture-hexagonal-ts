{
  "name": "architecture-hexagonal-ts",
  "version": "1.0.0",
  "description": "A project to practice hexagonal architecture",
  "main": "index.js",
  "repository": "git@github.com:wako057/architecture-hexagonal-ts.git",
  "author": "Gregory Gerard <wako057@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:cli": "tsc --downlevelIteration --noEmit ./src/apps/cli.ts && esbuild ./src/apps/cli.ts --bundle --platform=node --format=cjs --outfile=dist/cli.js",
    "build:api": "tsc --downlevelIteration --noEmit ./src/apps/api.ts && esbuild ./src/apps/api.ts --bundle --platform=node --format=cjs --outfile=dist/api.js",
    "start:api": "node ./dist/api.js"
  },
  "bin": {
    "crafty": "dist/cli.js"
  },
  "dependencies": {
    "@prisma/client": "5.20.0",
    "@testcontainers/postgresql": "^10.13.2",
    "@types/node": "^22.7.4",
    "commander": "^12.1.0",
    "esbuild": "^0.24.0",
    "fastify": "^5.0.0",
    "http-errors": "^2.0.0",
    "prisma": "^5.20.0",
    "typescript": "^5.6.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "jest": "^29.7.0",
    "testcontainers": "^10.13.2",
    "ts-jest": "^29.2.5"
  }
}
